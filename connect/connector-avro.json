{
    "name": "bench-avro",

    "config": {
        "connector.class": "io.debezium.connector.sqlserver.SqlServerConnector",

        "database.hostname": "sqlserver",
        "database.port": "1433",
        "database.user": "sa",
        "database.password": "YourStrong!Passw0rd",
        "database.names": "AdventureWorks2019",
        "database.encrypt": "false",
        "database.trustServerCertificate": "true",

        "topic.prefix": "bench-avro",

        "table.include.list": "Sales.SalesOrderDetailBig",

        "schema.history.internal.kafka.bootstrap.servers": "kafka:29092",
        "schema.history.internal.kafka.topic": "schema-changes.bench-avro",

        "snapshot.mode": "initial",
        "snapshot.isolation.level": "snapshot",

        "poll.interval.ms": "500",
        "max.batch.size": "8192",
        "max.queue.size": "32768",

        "tombstones.on.delete": "false",

        "_comment_converter": "Confluent AvroConverter: schema registered once in Schema Registry, messages carry only a 5-byte magic header (0x00 + 4-byte schema ID) + compact binary payload.",
        "key.converter": "io.confluent.connect.avro.AvroConverter",
        "key.converter.schema.registry.url": "http://schema-registry:8081",
        "value.converter": "io.confluent.connect.avro.AvroConverter",
        "value.converter.schema.registry.url": "http://schema-registry:8081"
    }
}
